extends layout

block content
  .container
    h1 Adicionar periodo
    
    form.w3-periodo-form(method="post")
      fieldset 
        // Adiciona um campo oculto para enviar o ID
        input(type="hidden" name="id" value="P")
        
        label(for="nome") Nome:
        input(type="text" name="nome")
        br
        
        label(for="descricao") Descricao:
        input(type="text" name="descricao")
        br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Adicionar periodo 

    p.w3-margin-top
      a(href="http://localhost:7777/periodos", class="saida") Voltar ao Menu periodos
      
