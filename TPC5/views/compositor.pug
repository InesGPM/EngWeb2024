extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Compositor #{compositor.id}

    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
        li
          b Nome: #{compositor.nome}
        li
          b Número: #{compositor.id}
        li
          b Biografia: #{compositor.bio}
        li
          b Data de Nascimento: #{compositor.dataNasc}
        li
          b Data de Óbito: #{compositor.dataObito}
        li
          b Período: #{compositor.periodo}


      a(href="http://localhost:7777/compositores" class="saida") Voltar ao Menu Compositores
