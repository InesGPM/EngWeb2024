extends layout

block content
  .container
    h1 Adicionar Compositor
    
    form.w3-compositor-form(method="post")
      fieldset 
        // Adiciona um campo oculto para enviar o ID
        input(type="hidden" name="id" value="C")
        
        label(for="nome") Nome:
        input(type="text" name="nome")
        br
        
        label(for="bio") Biografia:
        input(type="text" name="bio")
        br
        
        label(for="dataNasc") Data de Nascimento:
        input(type="date" name="dataNasc")
        br

        label(for="dataObito") Data de Óbito:
        input(type="date" name="dataObito")
        br

        label(for="periodo") Período:
        input(type="text" name="periodo")
        br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Adicionar Compositor 

    p.w3-margin-top
      a(href="http://localhost:7777/compositores", class="saida") Voltar ao Menu Compositores
      
